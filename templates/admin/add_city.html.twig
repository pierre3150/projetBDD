{% extends "base.html.twig" %}

{% block title %}Add City{% endblock %}

{% block content %}
<div class="container mt-5">
    <h2 class="mb-4">Add City</h2>
    <form action="/projetBDD/index.php?page=add_city&stage_id={{ stage_id }}" method="post">
        <div class="mb-3">
            <label for="nom_ville" class="form-label">City Name:</label>
            <input type="text" class="form-control" id="nom_ville" name="nom_ville" value="{{ city }}" required>
        </div>
        <div class="mb-3">
            <label for="code_pays" class="form-label">Country Code:</label>
            <input type="text" class="form-control" id="code_pays" name="code_pays" required>
        </div>
        <div class="mb-3">
            <label for="id_ville" class="form-label">City ID:</label>
            <input type="number" class="form-control" id="id_ville" name="id_ville" required>
        </div>
        <button type="submit" class="btn btn-success">Add City</button>
    </form>
</div>
{% endblock %}