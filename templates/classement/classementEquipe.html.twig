{% extends 'base.html.twig' %}

{% block title %}Classement des Equipes
{% endblock %}

{% block content %}
	<h1 style="text-align: center; font-weight: bold; font-size: 2.5rem; margin: 2rem 0 3rem 0;">
		Classement des Equipes
	</h1>

	<!-- Tableau pour afficher les Ã©quipes et leurs classements -->
	<table style="width: 50%;">
		<thead>
			<tr>
				<th style="border: 1px solid #ddd; padding: 8px;">Nom de l'Equipe</th>
				<th style="border: 1px solid #ddd; padding: 8px;">Temps Total</th>
			</tr>
		</thead>
		<tbody>
			{% for equipe in equipe %}
				<tr>
					<td style="border: 1px solid #ddd; padding: 8px;">{{ equipe.nom_Equipe }}</td>
					<td style="border: 1px solid #ddd; padding: 8px;">{{ equipe.temps_total }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
